<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyActivity">

    <EditText
        android:id="@+id/montant"
        android:layout_width="261dp"
        android:layout_height="59dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:inputType="text"

        android:hint="montant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dinar_euro"
        android:layout_width="324dp"
        android:layout_height="75dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="101dp"
        android:text="DINAR TUNISIEN -->EURO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/montant" />

    <Button
        android:id="@+id/euroDinar"
        android:layout_width="336dp"
        android:layout_height="77dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="64dp"
        android:text="EURO-->DINAR TUNISIEN "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dinar_euro" />

    <TextView
        android:id="@+id/resulat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="173dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/euroDinar" />

</androidx.constraintlayout.widget.ConstraintLayout>